version: "3"

services:    
    {{ app_name }}:
      image: {{ app_image }}
      container_name: {{ app_name }}
      command: poetry run gunicorn -b :5000 app:app
      environment:
        - SITE_LOGIN={{ site_login }}
        - SITE_PASS={{ site_pass }}
        - POWER_BI_URL={{ power_bi_url }}
        - CH_HOST={{ ch_host }}
        - CH_DB={{ ch_db }}
        - CH_USER={{ ch_user }}
        - CH_PASS={{ ch_pass }}
        - DB_API_ENDPOINT="{{ db_api_name }}/{}/{}"
      restart: always
      networks:
        intranet:
          aliases:
            - {{ app_name }}

    nginx:
      image: nginx:latest
      container_name: nginx
      restart: always
      volumes:
        - ./nginx/default.conf:/etc/nginx/conf.d/default.conf
      ports:
        - 80:80
      networks:
        - intranet
      depends_on:
        - {{ app_name }}

    {{ db_api_name }}:
      image: {{ db_api_image }}
      container_name: {{ db_api_name }}
      command: poetry run uvicorn pb_db_api.main:app --reload
      environment:
        - DB=db
        - DB_PASSWORD="{{ db_password }}"
      restart: always
      depends_on:
        - migrations
      networks:
        - intranet

    migrations:
      image: {{ db_api_image }}
      container_name: {{ db_api_name }}
      command: poetry run alembic upgrade head
      environment:
        - DB=db
        - DB_PASSWORD="{{ db_password }}"
      restart: always
      networks:
        - intranet


    {{ parser_name }}:
      image: {{ parser_image }}
      container_name: {{ parser_name }}
      command: poetry run python pb_parsers/main.py
      environment:
        - DB_API_ENDPOINT="{{ db_api_name }}/{}/{}"
        - DRIVER_URL={{ driver_url }}
        - CREATIVE_MARKET_USERNAME={{ creative_market_username }}
        - CREATIVE_MARKET_PASSWORD={{ creative_market_password }}
      restart: always
      depends_on:
        - {{ db_api_name }}
      networks:
        - intranet

    db:
      image: postgres:latest
      environment:
          - POSTGRES_PASSWORD="{{ db_password }}"
      volumes:
        - ./db_data/:/var/lib/postgresql/data
      networks:
        - intranet
      restart: always

networks: 
  intranet: